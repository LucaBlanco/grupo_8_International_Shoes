<!DOCTYPE html>
<html lang="es">
<%- include("../partials/head") %>
<body>
    <%- include("../partials/nav") %>
    <h1>Crear un producto</h1>
<!--- enctype="multipart/form-data"-->
    <form action="/productos/actualizar?m=PUT"  method="POST">
        <input type="hidden" name="id"  value="<%= producto.id %>">
        <fieldset>
            <label for="marca">Marca</label>
            <select name="marca" id="marca">
                <option value="<%= producto.marca %>" selected><%= producto.marca %></option>
                <option value="Louis Vuitton">Louis Vuitton</option>
                <option value="Adidas">Adidas</option>
                <option value="Nike">Nike</option>
                <option value="Acme">Acme</option>
                <option value="Patoruzito">Patoruzito</option>
            </select>
        </fieldset>
        <fieldset>
            <label for="nombre">Nombre/Modelo</label>
                <input type="text" name="nombre" id="nombre" value="<%= producto.nombre %>">
        </fieldset>
        <fieldset>
            <label for="descripcion">Descripci√≥n</label>
                <textarea name="descripcion" id="" cols="30" rows="10" id="descripcion"><%= producto.descripcion %></textarea>
        </fieldset>

        <fieldset>
            <label for="">Talles disponibles</label>
                <input type="checkbox" id="s" name="talle" value="'S':['38']">
                <label for="s">S</label>
                <input type="checkbox" id="m" name="talle" value="'M':['39']">
                <label for="m">M</label>
                <input type="checkbox" id="l" name="talle" value="'L':['40']">
                <label for="l">L</label>
                <input type="checkbox" id="xl" name="talle" value="'XL':['41']">
                <label for="xl">XL</label>
                <input type="checkbox" id="xxl" name="talle" value="'XXL':['42']">
                <label for="xxl">XXL</label>
        </fieldset>

        <fieldset>
            <label for="precio">Precio</label>
                <input type="number" name="precio" id="precio" value="<%= producto.precio %>">
        </fieldset>
        <fieldset><label for="stock">Stock</label>
            <input type="range" name="stock" id="stock" min="1" max="20" step="1" value="<%= producto.stock %>"
                oninput="document.getElementById('tStock').innerHTML = this.value" />
            <label id="tStock"></label>
        </fieldset>
        <fieldset><label for="imagen">Imagen</label>
            <input type="file" name="imagen" id="imagen" >
        </fieldset>
        <fieldset>
            <button type="submit">Actualizar producto</button>
        </fieldset>
    </form>

    <%- include("../partials/footer") %>

</body>
</html>